<% provide(:title, "プロフィール更新 | ") %>
<h1>プロフィール更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%  if @user.avatar.attached? %>
      <%= image_tag display_avatar(@user.avatar), class: 'user-image' %>
      <br>
      <%= link_to "削除", @user.avatar.purge %>
    <% end %>
    <%= render 'form', btn_name: "プロフィール更新" %>
    <%  if @user.avatar.attached? %>

    <% else %>
      <div class="gravatar_edit">
        <%= gravatar_for @user %>
        <a href="https://gravatar.com/emails" target="_blank" rel="noopener">gravatarを変更する</a>
      </div>
    <% end %>
  </div>
</div>