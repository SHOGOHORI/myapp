<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%  if @user.image.attached? %>
        <%= image_tag @user.image %>
      <% else %>
        <%= gravatar_for @user %>
      <% end %>
      <h1>
        <%= @user.name %>
      </h1>
      <% if @user == current_user && !guest_user? %>
        <%= link_to "プロフィールを変更する", edit_user_path(@user) %>
      <% end %>
    </section>
  </aside>
</div>