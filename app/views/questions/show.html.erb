<%= link_to question_path(@question), class: 'question-box' do %>
  <div class="card" style="width: 100rem;" >
    <div class="card-body">
      <div id="question-<%= @question.id %>">
        <%= link_to gravatar_for(@question.user, size: 50), @question.user %>
        <span class="user"><%= link_to @question.user.name, @question.user %></span>
        <br>
        <h4 class="card-title"><%= @question.title %></h4>
        <br>
        <span class="card-text">本文：<%= @question.content %></span>
        <br>
        <span class="timestamp">
         <%= time_ago_in_words(@question.created_at) %>前
        </span>
      </div>
    </div>
  </div>
<% end %>