<div class="card" style="width: 100rem;" >
  <div class="card-body">
    <div id="question-<%= @question.id %>">
      <h4>質問</h4>
      <%= link_to gravatar_for(@question.user, size: 50), @question.user %>
      <span class="user"><%= link_to @question.user.name, @question.user %></span>
      <br>
      <h4 class="card-title"><%= @question.title %></h4>
      <br>
      <span class="card-text">本文：<%= @question.content %></span>
      <% if @question.image.attached? %>
        <%= image_tag display_image(@question.image)  %>
      <% end %>
      <br>
      <span class="timestamp">
       <%= time_ago_in_words(@question.created_at) %>前
      </span>
      <% if current_user == @question.user %>
        <%= link_to "削除", @question, method: :delete,
                                         data: { confirm: "削除しますか？" } %>
      <% end %>
    </div>
  </div>
</div>
<ul class="answers">
  <%= render 'answer' %>
</ul>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form'  %>
  </div>
</div>
