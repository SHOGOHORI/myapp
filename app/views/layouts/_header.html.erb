
<header class="navbar navbar-fixed-top navbar-light" >
  <div class="container">
    <ul class="nav navbar-nav navbar-left">
      <%= link_to image_tag("home_logo.png", alt: "logo", height: "60px", id: "logo"),
                          root_path %>
      <li class="search-form">
        <%= search_form_for @q do |f| %>
          <%= f.text_field :content_or_title_cont, placeholder: "キーワード検索" %>
          <%= button_tag type: 'submit', class: 'btn btn-primary' do %>
            <i class="fas fa-search"></i>
          <% end %>
        <% end %>
      </li>
      <% if logged_in? %>
        <li>
          <%= link_to '質問を投稿する', new_question_path, class: 'btn post-btn' %>
        </li>
      <% end %>
  </ul>

    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "マイページ", current_user %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
         <% else %>
          <li><%= link_to "ユーザー登録",  signup_path, class:"fas fa-sign-in-alt" %></li>
          <li><%= link_to "ログイン", login_path, class:"fas fa-key" %></li>
         <% end %>
      </ul>
    </nav>
  </div>
</header>
