<div class="login">
  <div class="row">
     <div class="form">
       <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
         <p>ログイン</p>
         <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレス'  %>
   
         <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
         <p>パスワードお忘れの方は<%= link_to "こちら", new_password_reset_path %></p>
         <br>
   
         <%= f.label :remember_me, class: "checkbox inline" do %>
           <%= f.check_box :remember_me %>
           <span>このコンピューターを記憶しますか？</span>
         <% end %>
   
         <%= f.submit "ログイン", class: "btn-square-slant" %>
       <% end %>
   
       <p><%= link_to "ユーザー登録", signup_path %>はお済みですか？ </p>
       <%= link_to 'ゲストユーザーとしてログインする', guest_path, method: :post, class: 'btn btn-guest-login' %>
     </div>
   </div>
</div>