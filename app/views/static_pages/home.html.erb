<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="home-explanation">
    <p>あなたの育児の困ったを救うQ&Aサイト</p>
    <h1>SukuSku</h1>
  </div>
  <div class="non-login">
    <%= render 'sessions/login' %>
  </div>
<% end %>
  <div class="question-index">
    <%= will_paginate @questions, remote: true %>
      <ul class="questions">
        <section class="question_index">
          <%= render partial: 'questions/question', collection: @questions %>
        </section>
      </ul>
    <%= will_paginate @questions, remote: true %>
  </div>

